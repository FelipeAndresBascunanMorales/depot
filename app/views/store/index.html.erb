<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <h1 class="text-lg font-bold text-4xl">Your Programatic Catalog</h1>
  
  <ul>
    <% @products.each do |product| %>
      <li class="flex mb-6">
          <%= image_tag(product.image_url, class: 'object-contain w-40 h-48 shadow mr-6') %>
          <div class="ml-4">
            <h2 class="text-lg font-bold mb-3"><%= product.title %></h2>
            <p class="text-gray-500"><%= sanitize(product.description) %></p>
            <div class="mt-3"><%= product.price %></div>
          </div>
    <% end %>
  </ul>
</div>