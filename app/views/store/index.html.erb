<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <h1 class="text-lg font-bold text-4xl">Your Programatic Catalog</h1>
  
  <ul>
    <% cache @products do %>
  
      <% @products.each do |product| %>
        <% cache product do %>
          <li class="product flex mb-6">
              <%= image_tag(product.image_url, class: 'object-contain w-40 h-48 shadow mr-6') %>
              <div class="ml-4">
                <h2 class="text-lg font-bold mb-3"><%= product.title %></h2>
                <p class="text-gray-500"><%= sanitize(product.description) %></p>
                <div class="mt-3">
                  <%= number_to_currency(product.price) %>
                  <%= button_to 'Add to Cart', line_items_path(product_id: product), method: :post, class: 'bg-blue-500 text-white mt-1 px-3 py-1 rounded-lg' %>
                </div>
              </div>
          </li>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>